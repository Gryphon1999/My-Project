@model Web_App_Clothing_Ecommerce.Models.tb_feedback
@{
    ViewBag.Title = "feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("feedback","User",FormMethod.Post))
{
<body style="padding-top:20px;">
    <div class="container" style="margin-top:100px; color:black">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="well well-sm">
                    <form class="form-horizontal">
                        <fieldset>
                            <legend class="text-center">Feedback Form</legend>

                            <!-- Name input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="name">Name</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(value=>value.name,new { required = "", placeholder = "Your name", @class = "form-control" })
                                </div>
                            </div>

                            <!-- Email input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="email">E-mail</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(value => value.email, new { required = "", placeholder = "Your email", @class = "form-control" })
                                </div>
                            </div>

                            <!-- Message body -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="message">Feedback</label>
                                <div class="col-md-9">
                                    @Html.TextAreaFor(value => value.feedback, new {required="" , placeholder = "Please give feedback......", @class = "form-control", row ="5"})
                                </div>
                            </div>

                            <!-- Form actions -->
                            <div class="form-group">
                                <div class="col-md-12 text-right">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
}



