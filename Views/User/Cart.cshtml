@{
    ViewBag.Title = "cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    @if (TempData["cart"] != null)
    {
        <table class="table table-bordered" style="margin-top: 20px; ">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Bill</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in TempData["cart"] as List<Web_App_Clothing_Ecommerce.Models.cart>)
                {
                    <tr>
                        <td>@item.productName</td>
                        <td>@item.price</td>
                        <td>@item.qty</td>
                        <td>@item.bill</td>
                        <td><a href="@Url.Action("remove","User",new {id = item.poductid })" class="btn btn-danger">&#9986;</a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3"></td>
                    <td>@TempData["Total"]</td>
                </tr>
            </tfoot>

        </table>
    }
    else
    {
        <h1 style="color:red">Cart is Empty</h1>
    }
    @if (TempData["cart"] != null)
    {
        using (Html.BeginForm()){

            <input type="submit" value="Order Now" class="btn btn-warning" />
        }
    }

