@model Web_App_Clothing_Ecommerce.Models.tb_men
@{
    ViewBag.Title = "Men_Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (@Html.BeginForm("Men_Cart","User",FormMethod.Post))
{
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <img style="min-height:200px; width:200px;" src="~/Image/@Model.image" alt="Alternate Text" />
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8">
                <h1>Product Name: @Model.name</h1>
                <h3>Price: Rs @Model.price</h3>

                <input type="number" name="qty"  value="0" id="qty" min="1" max="5" />
                <input type="submit" value="Submit" class="btn btn-danger" />
            </div>
        </div>
        <br />
        <br />
        <div>
            <a href="~/User/feedback" class="btn btn-primary">Feedback</a>
        </div>
    </div>
}
