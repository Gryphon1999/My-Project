@model IEnumerable<Web_App_Clothing_Ecommerce.Models.tb_women>
@{
    ViewBag.Title = "com_women";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align:center;">Comparision Table of Women Product</h2>
@using (Html.BeginForm("com_women", "User", FormMethod.Get))
{
    <div class="wrap">
        <div class="search">
            @Html.TextBox("searching")
            <button type="submit" class="searchButton">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
}
<div style="margin-top:100px; margin-left:25%; position:absolute; height:500px; width:700px; text-align:center;">
    <table class="table table-bordered">
        <thead>
            <tr class="table-dark">
                <td>Product Name</td>
                <td>Description</td>
                <td>Price</td>
                <td>Image</td>
            </tr>
        </thead>
        <tbody class="table-striped table-hover">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td style="color:red;" colspan="3">No match found!!</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.name</td>
                        <td>@item.description</td>
                        <td>@item.price</td>
                        <td><img src="~/Image/@item.image" width="50" height="50" /></td>

                    </tr>
                }
            }
        </tbody>

    </table>
</div>
