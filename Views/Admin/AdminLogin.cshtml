@model Web_App_Clothing_Ecommerce.Models.tb_admin

@{
    ViewBag.Title = "AdminLogin";
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Admin_Login</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- css-->
    <link href="~/Style/css/main.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
    {
    <selction id="cover" class="min-vh-100">
        <div id="cover-caption">
            <div class="container">
                <div class="row text-white">
                    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                        <h1 class="display-4 py-2 text-truncate">Admin</h1>
                        <div class="px-2">
                            <form action="" class="justify-content-center">
                                <div class="form-group">
                                    <label class="sr-only">Name</label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Username", @class = "form-control" } })
                                </div>
                                <div class="form-group">
                                    <label class="sr-only">Password</label>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Password", @class = "form-control" } })
                                </div>
                                <div class="form-group">
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg">Login</button><br />
                                Not a member??@Html.ActionLink("Sing Up", "AdminRegister")
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </selction>
    }
</body>
</html>

